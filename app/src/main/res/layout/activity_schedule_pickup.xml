<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".SchedulePickupActivity">

<!--    Back Arrow Layout-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pickComponent1">

        <ImageView
            android:layout_width="200px"
            android:layout_height="50dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            android:layout_marginTop="20px">
<!--            To complete onClick to go back-->
<!--            android:onClick="">-->
        </ImageView>
    </FrameLayout>

<!--    Choose Quantity Layout-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pickComponent2"
        android:layout_below="@+id/pickComponent1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity (kg)"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="20px">
        </TextView>
        <FrameLayout
            android:id="@id/pickComponent2Child"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

        </FrameLayout>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/component6"
        android:layout_alignParentBottom="true">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="top"/>

    </FrameLayout>


</RelativeLayout>
