<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".SchedulePickupActivity"
    android:background="@color/off_white">

<!--    Back Arrow Layout-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickComponent1">

        <ImageButton
            android:id="@+id/backToOptionsBtn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_arrow_back"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent">
<!--            To complete onClick to go back-->
<!--            android:onClick="">-->
        </ImageButton>
    </FrameLayout>

<!--    Choose Quantity Layout-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:id="@+id/pickComponent2"
        android:layout_below="@+id/pickComponent1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity (L)"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="20sp">
        </TextView>

        <FrameLayout
            android:id="@+id/pickComponent2_1"
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/white_box"
            android:elevation="3dp">

<!--            Subtract Quantity button-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/light_grey"
                app:cardElevation="0dp"
                android:layout_marginStart="25dp"
                android:elevation="0dp">

                <ImageButton
                    android:id="@+id/subtractQuantity"
                    android:layout_width="65dp"
                    android:layout_height="80dp"
                    android:src="@drawable/substract"
                    android:scaleType="centerCrop"
                    android:padding="9dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:elevation="0dp"
                    android:onClick="subtractValue">

                </ImageButton>

            </androidx.cardview.widget.CardView>

<!--            Quantity Amount-->
            <TextView
                android:id="@+id/quantityAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="5.00"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1 L = 1 Point"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="25dp">

            </TextView>

<!--            Add Quantity button-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/light_grey"
                app:cardElevation="0dp"
                android:layout_marginStart="265dp">

                <ImageButton
                    android:id="@+id/addQuantity"
                    android:layout_width="65dp"
                    android:layout_height="80dp"
                    android:src="@drawable/plus"
                    android:scaleType="centerCrop"
                    android:padding="9dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:onClick="addValue">

                </ImageButton>
            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </FrameLayout>

<!--    Address-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/pickComponent3"
        android:layout_below="@+id/pickComponent2"
        android:layout_marginTop="15dp">

        <FrameLayout
            android:id="@+id/pickComponent3_1"
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/white_box"
            android:elevation="3dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:src="@drawable/placeholder">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Address"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="12dp">
            </TextView>
            <TextView
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="32dp"
                android:textSize="13sp"
                android:text="Jeddah - Alrabwah 23553, Asbat Bin Nasr St."
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/changeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="263dp"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:text="CHANGE"
                android:textStyle="bold"
                android:textColor="@color/green">
            </TextView>

        </FrameLayout>

    </FrameLayout>

<!--    Schedule Pickup-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/pickkComponent5"
        android:layout_below="@+id/pickComponent3"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:text="Schedule Your Pickup"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:shadowColor="#808080"
            android:shadowDx="2"
            android:shadowDy="4"
            android:shadowRadius="2"
            >
        </TextView>

<!--        Select Date-->
    <FrameLayout
        android:id="@+id/pickComponent5_1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="65dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/white_box"
        android:elevation="2dp">

        <TextView
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:hint="Select Date"
            android:id="@+id/tvDate"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            >

        </TextView>

    </FrameLayout>
        <FrameLayout
            android:id="@+id/pickComponent5_2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/white_box"
            android:elevation="2dp">

            <TextView
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:hint="Select Time"
                android:id="@+id/tvTime"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                >

            </TextView>

        </FrameLayout>


    </FrameLayout>

    <!--    Next Button-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/pickComponent8"
        android:layout_below="@id/pickkComponent5"
        android:layout_marginTop="20dp">

        <FrameLayout
            android:id="@+id/pickComponent8_1"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle1"
            android:elevation="4dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_gravity="center"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold">
<!--                To make onClick-->

            </Button>


        </FrameLayout>

    </FrameLayout>


